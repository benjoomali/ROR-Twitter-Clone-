<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <p>Created at: <%= @user.created_at %></p>
      <p>Updated at: <%= @user.updated_at %></p>
    </section>
  </aside>
  
  <div class ="col-md-8">
    <% if @user.rants.any? %>
      <h3>Rants (<%= @user.rants.count %>)</h3>
      <ol class="rants">
        <%= render @rants %>
      </ol>
      <%= will_paginate @rants %>
    <% end %>
  </div>
</div>

