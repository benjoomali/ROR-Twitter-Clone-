<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="rant_form">
        <%= render 'shared/rant_form' %>
      </section>
    </aside>
  </div>
  <div class="col-md-8">
    <h3>Today's Rants</h3>
    <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>

<div class="center jumbotron">
  <h1>Bitter</h1>

  <h2>
    A Twitter Clone built on Rails for people to rant about their lives.
  </h2>
  
  <h2>
    Based on Ruby on Rails Tutorial by Michael Hartl
  </h2>

  <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
</div>

<% end %>
